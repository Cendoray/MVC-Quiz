@model Quiz.Models.QuizQuestions

@{
    ViewBag.Title = "Quiz";
    TempData.Add("quiz", Model); 
}

<h2>Quiz</h2>


@using (Html.BeginForm("choseCategory", "Quiz", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Quiz Questions</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>@Model.title[@Model.questionPosition].ToString()</label>
        </div>
                <div class="form-group">
                    <label>@Html.RadioButton("Answer " + @Model.categoryID, @Model.answer1[@Model.questionPosition].ToString())@Model.answer1[@Model.questionPosition].ToString()</label>
                </div>

                <div class="form-group">

                    <label>@Html.RadioButton("Answer " + @Model.categoryID, @Model.answer2[@Model.questionPosition].ToString())@Model.answer2[@Model.questionPosition].ToString()</label>
                </div>

                <div class="form-group">

                    <label>@Html.RadioButton("Answer " + @Model.categoryID, @Model.answer3[@Model.questionPosition].ToString())@Model.answer3[@Model.questionPosition].ToString()</label>
                </div>

                <div class="form-group">

                    <label>@Html.RadioButton("Answer " + @Model.categoryID, @Model.answer4[@Model.questionPosition].ToString())@Model.answer4[@Model.questionPosition].ToString()</label>
                </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next Question" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Main Menu", "LoggedIndex", "Category")
</div>