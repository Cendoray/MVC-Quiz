@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <h1>Categories</h1>
    <div class="form-horizontal">
        @foreach (var x in Model)
        {
            <div class="form-group">

                <p>@Html.ActionLink((string)x, "choseCategory", "Quiz"/*, new { categoryID = x.SubString(x.IndexOf("*") + 1) }, null*/)</p>
            </div>
        }
        <div>
            <div class="form-group">

                <p>@Html.ActionLink("Add a category", "AddQuestion", "Category")</p>
            </div>
            <div class="form-group">

                <p>@Html.ActionLink("Add a question", "AddCategory", "Category")</p>
            </div>
        </div>
    </div>
}
